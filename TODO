# Lens
  * '.' (get : s -> a) (set : s -> a -> s)
  Lens : { get s a , set s a s }
  rect . x . get
  rect . x . set

some : ∏(#2)((∀0 → {1 : %i8}) → (∀0 → ∀1))

many : ∏(#3)((∀0 → {1 : %i8}) → (∀2 → {1 : (μf0 $! Var (VArg 0))}))
